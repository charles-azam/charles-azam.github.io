---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { books } from '../../content/books'
---

<BaseLayout lang="fr" title="Livres - Charles AZAM" description="Une liste de livres qui ont façonné ma pensée.">
  <div class="mx-auto max-w-3xl px-6 py-12 animate-page-in">
    <p class="text-xs font-mono text-[var(--color-accent)] uppercase tracking-widest mb-3">
      Lectures
    </p>
    <h1 class="font-[var(--font-display)] text-4xl text-[var(--color-text)] mb-3">
      Livres
    </h1>
    <p class="text-[var(--color-text-muted)] mb-12 max-w-lg">
      Une liste de livres qui ont façonné ma pensée.
    </p>

    <div class="space-y-3">
      {books.map((book) => (
        <div class="flex items-baseline gap-3 py-2">
          <span class="w-1 h-1 rounded-full bg-[var(--color-accent)] shrink-0 relative top-[-2px]" />
          <span class="leading-relaxed">
            <em class="text-[var(--color-text)] font-medium not-italic font-[var(--font-display)]">
              {book.title}
            </em>
            {book.originalTitle && (
              <span class="text-sm text-[var(--color-text-muted)]"> ({book.originalTitle})</span>
            )}
            <span class="text-sm text-[var(--color-text-muted)]"> — {book.author}</span>
          </span>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
